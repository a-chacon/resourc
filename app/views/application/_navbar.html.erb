<nav class="flex text-center flex-row text-left justify-between py-4 px-6 bg-whit items-baseline w-full">
  <div class="mb-2 sm:mb-0 rounded">
    <a href="/" class=""> <img class="h-7" src="/logo_2048.png" alt=""> </a>
  </div>
  <div class="my-auto">
    <div class="text-sm no-underline text-grey-darkest hover:text-blue-dark ml-2">
      <% if session[:user_id].nil? %>
        <%= render "login" %>
      <% else %>
        <% @current_user = User.find(session[:user_id]) if @current_user.nil? %>
        <div class="relative group" data-controller="drop-down-menu">
          <!-- User avatar icon -->
          <div class="flex flex-row">
            <span class="font-semibold hidden md:block p-2"><%= @current_user.name %></span>
            <button id="user-menu" class="focus:outline-none w-8" data-action="click->drop-down-menu#toggle">
              <img src="<%= url_for(@current_user.avatar) %>" alt="" class=" rounded-full w-max">
            </button>
          </div>
          <!-- User dropdown menu -->
          <div data-drop-down-menu-target="menu" id="user-dropdown" class="hidden absolute right-0 z-10 mt-2 w-56 origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1">
            <div class="" role="none">
              <a href="<%= edit_user_path(@current_user) %>" class="hover:bg-slate-100 rounded-lg text-gray-700 block px-4 py-2 text-sm" role="menuitem" tabindex="-1" id="menu-item-0">Mi cuenta</a>
              <a href="<%= user_path(@current_user) %>" class="hover:bg-slate-100 rounded-lg text-gray-700 block px-4 py-2 text-sm" role="menuitem" tabindex="-1" id="menu-item-1">Mis perfil</a>
              <%= link_to "Salir", "/sessions/sign_out", class:"hover:bg-red-100 rounded-b-lg text-gray-700 block px-4 py-2 text-sm border-t", role: "menuitem", tabindex: "-1", id: "menu-item-2" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</nav>
