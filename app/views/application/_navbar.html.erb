<nav class="flex text-center flex-row text-left justify-between py-4 px-6 bg-whit items-baseline w-full">
  <div class="mb-2 sm:mb-0 rounded">
    <a href="/" class=""> <img class="h-7 dark:invert" src="/logo_2048.png" alt=""> </a>
  </div>
  <div class="my-auto flex flex-row-reverse items-center">
    <button data-controller="dark-mode" data-action="click->dark-mode#toggleDarkMode" class="hover:scale-110 transition ease-in-out delay-50 duration-200 px-4 py-2 rounded">
      <svg id="sun-icon" data-dark-mode-target="sunIcon" class="w-6 h-6 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
