     <%= search_form_for @q, url: root_path, class: "relative mx-auto mb-4" do |f| %>
      <%= f.search_field :title_or_description_or_link_or_tags_name_cont, class: "dark:bg-slate-700 w-full rounded-xl focus:border-indigo-600 focus:ring-0" %>
      <button type="submit" class="absolute right-0 top-0 mt-3 mr-4">
        <svg class="text-gray-600 dark:text-white h-4 w-4 fill-current" xmlns="http://www.w3.org/2000/svg"
          xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="Capa_1" x="0px" y="0px"
          viewBox="0 0 56.966 56.966" style="enable-background:new 0 0 56.966 56.966;" xml:space="preserve"
          width="512px" height="512px">
          <path
            d="M55.146,51.887L41.588,37.786c3.486-4.144,5.396-9.358,5.396-14.786c0-12.682-10.318-23-23-23s-23,10.318-23,23  s10.318,23,23,23c4.761,0,9.298-1.436,13.177-4.162l13.661,14.208c0.571,0.593,1.339,0.92,2.162,0.92  c0.779,0,1.518-0.297,2.079-0.837C56.255,54.982,56.293,53.08,55.146,51.887z M23.984,6c9.374,0,17,7.626,17,17s-7.626,17-17,17  s-17-7.626-17-17S14.61,6,23.984,6z" />
        </svg>
      </button>
    <% end %>

    <div class="flex flex-col gap-4">
      <h1 class="text-slate-800 dark:text-slate-100 text-2xl font-semibold text-left">
        <%= t 'title' %>
      </h1>

      <h2 class="mx-auto text-left"><%= t 'description' %></h2>
    </div>

    <div class="py-4 flex flex-col gap-4" >
      <h2 class="text-left text-xl font-semibold">Share</h2>
      <%= form_with url: new_link_path, method: :get, class:"flex flex-col gap-4 ", "data-controller":"validate-url"  do |form| %>
        <%= form.text_field :link, placeholder: "https://resourc.tech", class:"dark:bg-slate-900 w-full rounded-xl focus:border-indigo-600 focus:ring-0" , "data-validate-url-target": "urlInput" %>
        <%= form.submit t("share_title") ,class:"text-white bg-gradient-to-r from-rose-600 to-purple-700 text-center rounded-lg px-5 py-2 font-semibold hover:scale-110 transition ease-in-out delay-50 duration-200", "data-action": "validate-url#validateUrl" %>
      <% end %>
      <div data-validate-url-target="warning" class="text-red-500 m-2" style="display: none;">
        <%= t("invalid_url") %> 
      </div>
    </div>

    <div class="py-4 flex flex-col gap-4">
      <h2 class="text-xl text-left font-semibold">Popular Tags</h2>
      <div class="flex flex-wrap gap-3 place-content-left">
        <% Tag.select('tags.*, COUNT(links_tags.link_id) AS link_count')
                       .joins(:links)
                       .group('tags.id')
                       .order('link_count DESC')
                       .limit(15).each do |t| %>
          <%= link_to t.name , tag_path(t),rel:'nofollow', class: "px-2 py-1 rounded-xl text-sm bg-gradient-to-r from-blue-600 to-purple-700 text-white font-semibold hover:scale-110 transition ease-in-out delay-50 duration-200" %>
        <% end %>
      </div>
    </div>

    
    <div class="py-4 flex flex-col gap-4">
      <h2 class="text-xl text-left font-semibold">Popular Lists</h2>
      <ul class="list-disc list-inside">
        <% List.all.limit(10).each do |l| %>
          <li class="font-semibold "><a href="<%= list_url(l) %>"><%= l.title %></a></li>
        <% end %>
      </ul>
    </div>

