        d="M55.146,51.887L41.588,37.786c3.486-4.144,5.396-9.358,5.396-14.786c0-12.682-10.318-23-23-23s-23,10.318-23,23  s10.318,23,23,23c4.761,0,9.298-1.436,13.177-4.162l13.661,14.208c0.571,0.593,1.339,0.92,2.162,0.92  c0.779,0,1.518-0.297,2.079-0.837C56.255,54.982,56.293,53.08,55.146,51.887z M23.984,6c9.374,0,17,7.626,17,17s-7.626,17-17,17  s-17-7.626-17-17S14.61,6,23.984,6z" />
    </svg>
  </button>
<% end %>

<div class="flex flex-col gap-4">
  <h1 class="text-slate-800 dark:text-slate-100 text-2xl font-semibold text-center md:text-left">
    <%= t 'title' %>
  </h1>

  <h2 class="mx-auto text-center md:text-left"><%= t 'description' %></h2>
</div>


<div class="py-4 flex flex-col gap-4">
  <h2 class="text-xl text-center md:text-left font-semibold">Popular Tags</h2>
  <div class="flex flex-wrap gap-3 ">
    <% Tag.select('tags.*, COUNT(links_tags.link_id) AS link_count')
                   .joins(:links)
                   .group('tags.id')
                   .order('link_count DESC')
                   .limit(15).each do |t| %>
      <%= link_to "#" + t.name , tag_path(t),rel:'nofollow', class: "rounded-xl dark:text-slate-200 text-slate-600 hover:underline" %>
    <% end %>
  </div>
</div>


<div class="py-4 flex flex-col gap-4">
  <h2 class="text-xl text-center md:text-left font-semibold">Popular Lists</h2>
  <ul class="list-disc list-inside">
    <% List.all.limit(10).each do |l| %>
      <li class="font-semibold "><a href="<%= list_url(l) %>"><%= l.title %></a></li>
    <% end %>
  </ul>
</div>

