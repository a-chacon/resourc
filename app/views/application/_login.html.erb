<div  data-controller="modal" >
  <button data-action="modal#open" type="button" class="rounded-md bg-slate-800 dark:bg-slate-500 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-slate-500">Entrar</button>
  <div class="relative z-10 hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true" data-modal-target="wrapper" data-modal-target="dialog">
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>

    <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
      <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
        <div class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 w-full sm:max-w-lg">
          <div class="text-center bg-white p-6 md:p-8">
            <h3 class="text-xl font-semibold leading-6 text-gray-900 py-6" id="modal-title">Iniciar session</h3>
            <%= form_tag('/auth/github', method: 'post', data: {turbo: false}) do %>
              <button type="submit" class="font-semibold mx-auto m-2 flex items-center justify-center w-full px-3 py-4 md:py-2 bg-gray-800 text-white rounded-lg hover:bg-gray-700">
                <!-- GitHub SVG Icon -->
                <svg class="w-4 md:w-5 h-4 md:h-5 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <path fill="currentColor" d="M12 0a12 12 0 0 0-3.821 23.385c.6.11.819-.261.819-.582v-2.018c-3.338.725-4.042-1.597-4.042-1.597-.547-1.385-1.334-1.755-1.334-1.755-1.09-.741.083-.727.083-.727 1.204.085 1.838 1.236 1.838 1.236 1.07 1.84 2.809 1.308 3.496 1.001.109-.774.418-1.308.762-1.605-2.667-.305-5.466-1.334-5.466-5.93 0-1.31.468-2.38 1.236-3.22-.125-.306-.536-1.523.117-3.17 0 0 1.005-.322 3.3 1.23a11.568 11.568 0 0 1 3.01-.404c1.019.005 2.05.137 3.016.404 2.292-1.553 3.296-1.23 3.296-1.23.655 1.647.243 2.865.118 3.17.77.84 1.236 1.91 1.236 3.22 0 4.605-2.802 5.622-5.47 5.922.43.373.815 1.105.815 2.227v3.31c0 .322.215.697.827.581A12 12 0 0 0 12 0z"/>
                </svg>
                Github
              </button>
            <% end %>

            <%= form_tag('/auth/gitlab', method: 'post', data: {turbo: false}) do %>
              <button type="submit" class="font-semibold mx-auto m-2 flex items-center justify-center w-full px-3 py-4 md:py-2 bg-purple-800 text-white rounded-lg hover:bg-purple-700">
                <svg class="w-4 md:w-5 h-4 md:h-5 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="97 99 185.7 158.6">
                  <defs>
                    <style>
                      .cls-1 { fill: #e24329; }
                      .cls-2 { fill: #fc6d26; }
                      .cls-3 { fill: #fca326; }
                    </style>
                  </defs>
                  <g id="LOGO">
                    <path class="cls-1" d="M282.83,170.73l-.27-.69-26.14-68.22a6.81,6.81,0,0,0-2.69-3.24,7,7,0,0,0-8,.43,7,7,0,0,0-2.32,3.52l-17.65,54H154.29l-17.65-54A6.86,6.86,0,0,0,134.32,99a7,7,0,0,0-8-.43,6.87,6.87,0,0,0-2.69,3.24L97.44,170l-.26.69a48.54,48.54,0,0,0,16.1,56.1l.09.07.24.17,39.82,29.82,19.7,14.91,12,9.06a8.07,8.07,0,0,0,9.76,0l12-9.06,19.7-14.91,40.06-30,.1-.08A48.56,48.56,0,0,0,282.83,170.73Z" />
