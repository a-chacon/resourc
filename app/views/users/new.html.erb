<div class="md:mx-auto md:w-80 ">
  <h1 class="font-bold text-4xl">Crear cuenta</h1>

  <%= form_with model: @current_user, method: :post do |form| %>
    <div class="inline flex flex-col">
      <div class="mt-8 ">
        <%= form.label :email,"Email", class:"block text-sm font-medium leading-6 text-gray-900" %>
        <div class="mt-2">
          <div class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 ">
            <%= form.text_field :email, class:"block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6" %>
          </div>
        </div>
      </div>

      <div class="mt-8 ">
        <%= form.label :password,"Password", class:"block text-sm font-medium leading-6 text-gray-900" %>
        <div class="mt-2">
          <div class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 ">
            <%= form.text_field :password, class:"block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6" %>
          </div>
        </div>
      </div>

      <div class="mt-10 flex flex-col gap-y-2">
        <span>¿Ya tiene cuenta? <%= link_to(" Ingresa aquí.",new_session_path, class: "underline text-blue-800") %></span>
        
        <%= form.submit "Registrarme",class: "text-white bg-gradient-to-r from-purple-700 to-sky-500 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 text-center rounded-lg px-5 py-2 w-full font-semibold hover:scale-110 transition ease-in-out delay-150 duration-300" %>
      </div>
    </div>
  <% end %>

</div>
