<%= form_with(model: @current_user, class: "contents") do |form| %>
  <div class="inline flex flex-col">
    <div class="mt-8 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
      <div class="sm:col-span-4">
        <%= form.label :name,"Nombre", class:"block text-sm font-medium leading-6 text-gray-900" %>
        <div class="mt-2">
          <div class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md">
            <%= form.text_field :name, class:"block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6" %>
          </div>
        </div>
        <% if @current_user.errors[:name].any? %>
          <p class="text-red-500 text-xs italic"> <%= @current_user.errors[:name].join(', ') %></p>
        <% end %>
      </div>
    </div>

    <div class="mt-8 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
      <div class="sm:col-span-4">
        <%= form.label :nickname,"Apodo", class:"block text-sm font-medium leading-6 text-gray-900" %>
        <div class="mt-2">
          <div class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md">
            <%= form.text_field :nickname, class:"block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6" %>
          </div>
        </div>
        <% if @current_user.errors[:nickname].any? %>
          <p class="text-red-500 text-xs italic"> <%= @current_user.errors[:nickname].join(', ') %></p>
        <% end %>
      </div>
    </div>

    <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
    <%= form.submit "Guardar",class: "rounded-md bg-green-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-green-500  my-4" %>
    </div>
  </div>
<% end %>
