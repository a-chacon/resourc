<div id="<%= dom_id user %>">
  <div class="flex flex-row gap-2">
    <div class="basis-1/3 flex justify-end">
      <img src="<%= url_for(@user.avatar) %>" alt="User's avatar." class="rounded-full w-full h-auto sm:w-1/2 md:w-1/3 lg:w-1/4 xl:w-1/5 2xl:w-1/6">
    </div>
    <div class="basis-2/3">
      <p class="text-xl font-semibold"><%= @user.name %></p>
      <p>@<%= @user.nickname  %></p>
    </div>
  </div>
  <% if action_name != "show" %>
    <%= link_to "Show this user", user, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this user', edit_user_path(user), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
